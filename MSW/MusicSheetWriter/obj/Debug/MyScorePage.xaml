<Page
    x:Class="MusicSheetWriter.MyScorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicSheetWriter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource mswPrimaryColor}">
    
    <Page.Resources>
        <DataTemplate x:Key="ScoreListView">
            <StackPanel Orientation="Horizontal">
                <Ellipse Margin="10,0,0,0" Width="60" Height="60" VerticalAlignment="Top" HorizontalAlignment="Left" Stroke="{StaticResource mswAccentColor}" StrokeThickness="2">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding LocationPreview}"/>
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock Text="{Binding  Title}" Margin="10,0,0,0" VerticalAlignment="Center" Style="{StaticResource mswUsernameTextBlockDarkStyle}"/>
                <CheckBox x:ConnectionId='1' IsChecked="{Binding Is_Favourite}" VerticalAlignment="Center" Margin="10,0,0,0"                       />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <TextBlock Text="Music Sheet Writer" Margin="19,12,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource mswTitleTextBlockDarkStyle}"/>
        <TextBlock x:Uid="MyScorePageTitleTextBlock" Text="Mes Partitions" Margin="15,28,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource mswHeaderTextBlockDarkStyle}"/>
        <ListView x:ConnectionId='2' x:Name="listViewScore" ItemTemplate="{StaticResource ScoreListView}"  Margin="19,120,0,0" Height="460" Width="380" VerticalAlignment="Top" HorizontalAlignment="Left"                                     IsItemClickEnabled="True" SelectionMode="None"/>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar Background="{StaticResource mswPrimaryLightColor}" Foreground="{StaticResource mswPrimaryTextColor}">
            <AppBarButton x:ConnectionId='3' x:Uid="SearchAppBarButton" x:Name="SearchAppBarButton" Label="Search" Icon="Zoom"                                 />
            <AppBarButton x:ConnectionId='4' x:Uid="LogoutAppBarButton" x:Name="LogoutAppBarButton" Label="Logout" Icon="Cancel"                                 />
        </CommandBar>
    </Page.BottomAppBar>
</Page>

